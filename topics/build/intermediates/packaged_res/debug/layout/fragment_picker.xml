<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/picker_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picker Fragment"
        android:textSize="24sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/picker_select_option_a_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Option A"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/picker_select_option_b_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Option B" />

</LinearLayout>