<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/broadcast_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broadcast Receiver Status"
        android:textSize="20sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/send_airplane_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Airplane Mode Broadcast"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/send_custom_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Custom App Event" />

</LinearLayout>